<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Delete Talent</title>
</head>

<body>

{{> header}}
<h1>{{pageTitle}}</h1>

<table border="1">
    <tr>
        <th>First Name</th>
        <th>Middle Name</th>
        <th>Last Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Interested Jobs</th>
    </tr>

    {{#each talent}}
        <tr>
            <td>{{this.fname}}</td>
            <td>{{this.mname}}</td>
            <td>{{this.lname}}</td>
            <td>{{this.phone}}</td>
            <td>{{this.email}}</td>
            <td>{{this.jobs}}</td>
        </tr>
    {{/each}}
</table>

<br>
<form method="post" action="/deleteTalent/{{fname}}">
<fieldset>
    <p>
        <input type="submit" value="Submit" />
    </p>
</fieldset>
</form>

{{> footer}}

</body>
</html>
